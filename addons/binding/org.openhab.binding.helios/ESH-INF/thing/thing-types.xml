<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="helios"
						  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
						  xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
						  xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
	<thing-type id="sample">
		<label>Helios Binding Thing</label>
		<description>Sample thing for Helios Binding</description>

		<channels>
			<channel id="channel1" typeId="sample-channel"/>
			<channel id="articleDesc" typeId="articleDesc-channel"/>
			<channel id="refNo" typeId="refNo-channel"/>
			<channel id="macAdress" typeId="macAdress-channel"/>
			<channel id="language" typeId="language-channel"/>
			<channel id="date" typeId="date-channel"/>
			<channel id="dateTime" typeId="dateTime-channel"/>
			<channel id="summerWinter" typeId="summerWinter-channel"/>
		</channels>
		
		<config-description>
            <parameter name="hostname" type="text" required="true">
                <context>network_address</context>
                <label>Hostname</label>
                <description>The hostname of the Helios Device.</description>
                <default>192.168.x.x</default>
            </parameter>
            <parameter name="refreshInterval" type="integer" required="true">
                <label>Refresh interval</label>
                <description>
                    Refresh interval of Messages
                </description>
                <default>60000</default>
            </parameter>
            <parameter name="port" type="integer" required="true">
                <label>Port</label>
                <description>
                    Port of Connection
                </description>
                <default>502</default>
            </parameter>
            <parameter name="unit" type="integer" required="true">
                <label>Unit</label>
                <description>
                    Unit
                </description>
                <default>180</default>
            </parameter>
            <parameter name="startAdress" type="integer" required="true">
                <label>StartAdress</label>
                <description>
                    StartAdress of helios setting
                </description>
                <default>1</default>
            </parameter>
        </config-description>
	</thing-type>

	<!-- Sample Channel Type -->
	<channel-type id="sample-channel">
		<item-type>Switch</item-type>
		<label>test by Allex</label>
		<description>Sample channel for Helios Binding</description>
	</channel-type>
	
	<channel-type id="articleDesc-channel">
        <item-type>String</item-type>
        <label>Article description</label>
        <description>The description of the helios system</description>
        <category>Text</category>
        <state readOnly="true" />
<!--         <config-description>
            <parameter name="DateTimeFormat" type="text" required="false">
                <label>Date Time Format</label>
                <description>Formattting of the date &amp; time.</description>
                <default>yyyy-MM-dd HH:mm:ss z</default>
            </parameter>
        </config-description>
         -->
    </channel-type>
    <channel-type id="refNo-channel">
        <item-type>String</item-type>
        <label>RefNo</label>
        <description>The reference number of the helios system</description>
        <category>Text</category>
        <state readOnly="true" />
    </channel-type>
    
    <channel-type id="macAdress-channel">
        <item-type>String</item-type>
        <label>MAC-Adress</label>
        <description>The mac adress of the helios system</description>
        <category>Text</category>
        <state readOnly="true" />
    </channel-type>
    
    <channel-type id="language-channel">
        <item-type>String</item-type>
        <label>Language</label>
        <description>The language of the helios system</description>
        <category>Text</category>
        <state readOnly="true" />
    </channel-type>
    
    <channel-type id="date-channel">
        <item-type>String</item-type>
        <label>Date</label>
        <description>The date of the helios system</description>
        <category>Date</category>
        <state readOnly="true" />
        <config-description>
            <parameter name="DateTimeFormat" type="text" required="false">
                <label>Date Time Format</label>
                <description>Formattting of the date &amp; time.</description>
                <default>yyyy-MM-dd HH:mm:ss z</default>
            </parameter>
        </config-description>
    </channel-type>
    
    <channel-type id="dateTime-channel">
        <item-type>DateTime</item-type>
        <label>Date</label>
        <description>The time of the helios system</description>
        <category>Date</category>
        <state readOnly="true" />
    </channel-type>
    
    <channel-type id="summerWinter-channel">
        <item-type>String</item-type>
        <label>Summer/Winter</label>
        <description>The summer or winter setting of the helios system</description>
        <category>Text</category>
        <state readOnly="true" />
    </channel-type>
    
</thing:thing-descriptions>
